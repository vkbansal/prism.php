<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Prism.php</title>
    <link rel="stylesheet" href="assets/css/styles.css">
    <link rel="stylesheet" id="theme-basic" href="assets/css/prism-basic.css" disabled>
    <link rel="stylesheet" id="theme-coy" href="assets/css/prism-coy.css" disabled>
    <link rel="stylesheet" id="theme-dark" href="assets/css/prism-dark.css" disabled>
    <link rel="stylesheet" id="theme-funky" href="assets/css/prism-funky.css" disabled>
    <link rel="stylesheet" id="theme-okaidia" href="assets/css/prism-okaidia.css">
    <link rel="stylesheet" id="theme-twilight" href="assets/css/prism-twilight.css" disabled>
    <link rel="stylesheet" id="theme-tomorrow" href="assets/css/prism-tomorrow.css" disabled>
</head>
<body>
    <nav class="navmenu navmenu-default navmenu-fixed-left" role="navigation">
        <a class="navmenu-brand" href="#">Prism.php</a>

        <ul class="nav navmenu-nav">
            <li><a href="./index.html">Home</a></li>
            <li><a href="samples.html">Code Samples</a></li>
            <li class="theme-switcher">
                <span>Theme Switcher</span>
                <select name="theme" id="theme-switcher" class="form-control">
                    <option value="basic">Basic</option>
                    <option value="coy">Coy</option>
                    <option value="dark">Dark</option>
                    <option value="funky">Funky</option>
                    <option value="okaidia">Okaidia</option>
                    <option value="twilight">Twilight</option>
                    <option value="tomorrow">Tomorrow</option>
                </select>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
       <br>
       {% block content %}{% endblock %}
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){

            function switchTheme(id, select){
                $('link[id^=theme]').attr('disabled', 'disabled');
                $('link#theme-'+ id).removeAttr('disabled');
                if (select) $('#theme-switcher').val(id);
            }
            
            $("#theme-switcher").on('change', function(){
                var id = $(this).val();
                switchTheme(id);
            })

            switchTheme('okaidia', true);
        });
    </script>
    {% block js %}{% endblock %}
</body>
</html>
